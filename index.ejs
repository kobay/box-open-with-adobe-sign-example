<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <title>Sample</title>

    <link href="https://cdn01.boxcdn.net/platform/elements/11.0.2/en-US/openwith.css" rel="stylesheet" type="text/css"></link>
    <link href="https://cdn01.boxcdn.net/platform/preview/2.34.0/en-US/preview.css" rel="stylesheet" type="text/css"></link>

    <script src="https://cdn01.boxcdn.net/platform/elements/11.0.2/en-US/openwith.js"></script>
    <script src="https://cdn01.boxcdn.net/platform/preview/2.34.0/en-US/preview.js"></script>

    <style type="text/css">
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="openwith" style=""></div>
    <div class="preview-container" style="height:800px; width:100%;"></div>
</div>
<script>
    // app.jsから渡されたパラメータ
    const fileId = "<%= fileId %>"
    // ダウンスコープされたアクセストークン
    const token = "<%= token %>"

    const openWith = new Box.ContentOpenWith();
    openWith.show(fileId, token,  { container: ".openwith"})

    const preview = new Box.Preview();
    preview.show(fileId, token, { container: ".preview-container"});
</script>
</body>
</html>
